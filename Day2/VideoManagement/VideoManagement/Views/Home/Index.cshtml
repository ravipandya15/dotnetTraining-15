@model IEnumerable<Video>
@{
    ViewData["Title"] = "Home Page";
}

<h1>All Videos</h1>
<p>Total : @Model.Count() Videos</p>
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Create">
        Create New Video
    </a>
</div> 
<div class="panel panel-primary">
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Length</th>
                        <th>Category</th>
                        <th>Format</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Title</td>
                        <td>@p.Length</td>
                        <td>@p.Category</td>
                        <td>@p.Format</td>
                        <td>
                            <a class="btn btn-danger" asp-controller="Home" asp-action="Update" asp-route-id="@p.Id">
                                Update
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-success" asp-controller="Home" asp-action="Delete" asp-route-id="@p.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>